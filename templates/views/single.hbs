<div class="ui container">
  <ol class="ui breadcrumbs">
    <li><a href="/">Главная</a></li>
		{{#ifeq page.type 'Category'}}
      <li><a href="/{{page.category.path}}">{{page.category.title}}</a></li>
		{{/ifeq}}
    <li>
			{{#if page.title_alias}}
				{{page.title_alias}}
			{{else}}
				{{page.title}}
			{{/if}}
		</li>
  </ol>
	
	{{{page.fulltext}}}
	{{{page.singlePage.fulltext}}}
	
	{{#if page.slider.length}}
		<div class="page-slider swiper-container">
			<div class="swiper-wrapper">

				{{#each page.slider as |image|}}
					<div class="swiper-slide">
						<img src="{{cloudinaryUrl image width=1024 height=576 crop='fill'}}" alt="{{service.title}}">
					</div>
				{{/each}}

			</div>

			<div class="slider-button-prev"></div>
			<div class="slider-button-next"></div>
		</div>
	{{/if}}
</div>
